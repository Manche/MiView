<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Misskey Color Palette -->
    <Color x:Key="Primary">#86b300</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#F8F9FA</Color>
    <Color x:Key="BackgroundSecondary">#FFFFFF</Color>
    <Color x:Key="BackgroundTertiary">#F5F5F5</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#14171A</Color>
    <Color x:Key="TextSecondary">#657786</Color>
    <Color x:Key="TextTertiary">#AAB8C2</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#E1E8ED</Color>
    <Color x:Key="BorderSecondary">#C1C9D2</Color>
    
    <!-- Gray Scale -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    
    <!-- Action Colors -->
    <Color x:Key="AccentBlue">#1DA1F2</Color>
    <Color x:Key="RenoteGreen">#17BF63</Color>
    <Color x:Key="FavoriteRed">#E0245E</Color>
    <Color x:Key="ReplyBlue">#1DA1F2</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource BorderPrimary}"/>
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
</ResourceDictionary>